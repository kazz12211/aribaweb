<project name="Site" default="launch">

    <description>
        AW Site -- App for public site
    </description>

    <property name="enable.groovy" value="true"/>
    <property name="aw.packagedResourceExtensions" value="awl,oss,csv,xml"/>

    <property name="tomcat.port.prefix.override" value="7"/>
    <property name="servlet.port" value="7080"/>
    <property name="jpda.address" value="7000"/>

    <property environment="env"/>
    <property name="aw.home" location="${env.AW_HOME}"/>

    <import file="${aw.home}/tools/build-metaui-app.xml"/>

</project>
